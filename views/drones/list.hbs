<h2>Available drones</h2>
{{#each drones}}
<ul>
    <li>
        <p>Name: {{name}}</p>
        <p>Propellers: {{propellers}}</p>
        <p>Maximum Speed: {{maxSpeed}}</p>
        <a href='drones/{{id}}/edit'>edit drone</a>
        <form action="/drones/{{id}}/delete" method='POST'>
            <button type='submit'>Delete</button>
        </form>
    </li>
</ul>
{{/each}}

<a href="drones/create">Create new drone</a>